<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="asmaa.client.controller.LoginController"
            stylesheets="@/css/style.css">

    <!-- TITRE -->
    <top>
        <Label text="Connexion / Inscription"
               styleClass="title"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- CONTENU -->
    <center>
        <VBox spacing="15" alignment="CENTER">

            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Mot de passe"/>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Connexion Client" onAction="#handleLogin"/>
                <Button text="Admin" onAction="#handleAdmin"/>
            </HBox>

            <Separator/>

            <Button text="Continuer comme invité"
                    onAction="#handleGuest"/>

            <Button text="Créer un compte"
                    onAction="#handleRegister"/>

        </VBox>
    </center>

</BorderPane>
